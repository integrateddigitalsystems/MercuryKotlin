<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_academy_pt_height"
    android:layout_marginTop="@dimen/normal_margin"
    android:layout_marginStart="@dimen/margin_start_end"
    android:layout_marginEnd="@dimen/margin_start_end"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:paddingEnd="@dimen/big_margin"
        android:layout_marginTop="@dimen/big_font"
        android:paddingTop="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin"
        android:paddingStart="@dimen/big_margin"
        android:id="@+id/ptPackage_item">

        <com.ids.mercury.custom.CustomTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/normal_margin"
            android:textSize="@dimen/normal_font"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>


        <com.ids.mercury.custom.CustomTextViewMedium
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/normal_margin"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_font" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ids.mercury.custom.CustomTextViewMedium
                android:id="@+id/tvIsMultiUser"
                android:layout_width="wrap_content"
                android:text="@string/is_checked"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font" />

            <ImageView
                android:id="@+id/ivShow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>