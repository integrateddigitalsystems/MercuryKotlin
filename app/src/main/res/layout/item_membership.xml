<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/white_border_layout"
    android:orientation="vertical"
    android:padding="@dimen/small_margin"
    android:layout_marginTop="@dimen/normal_margin"
    android:layout_height="wrap_content">





            <com.ids.mercury.custom.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font"
                android:maxLines="1"
                android:text="@string/row_package"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

            <com.ids.mercury.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvPackageType"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>



            <com.ids.mercury.custom.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font"
                android:maxLines="1"
                android:layout_marginTop="@dimen/normal_margin"
                android:text="@string/start_date"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

            <com.ids.mercury.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvStartDate"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>



            <com.ids.mercury.custom.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font"
                android:maxLines="1"
                android:layout_marginTop="@dimen/normal_margin"
                android:text="@string/row_expiry"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

            <com.ids.mercury.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvEndDate"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>


            <com.ids.mercury.custom.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font"
                android:maxLines="1"
                android:layout_marginTop="@dimen/normal_margin"
                android:text="@string/row_status"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

            <com.ids.mercury.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvStatus"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>












</LinearLayout>