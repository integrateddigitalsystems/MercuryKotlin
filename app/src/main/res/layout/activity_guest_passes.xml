<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/margin_start_end"
                android:paddingEnd="@dimen/margin_start_end"
                android:orientation="vertical">





                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                           >



                            <com.ids.mercury.custom.CustomTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/normal_margin"
                                android:id="@+id/tvGuestPassesCount"
                                android:text="@string/guest_passes_available"
                                android:textColor="@color/white"
                                android:textSize="@dimen/normal_font"/>

                            <LinearLayout
                                android:background="@drawable/white_border_layout"
                                android:id="@+id/llIssued"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingEnd="@dimen/normal_margin"
                                android:layout_marginTop="@dimen/medium_margin"

                                >

                                <com.ids.mercury.custom.CustomTextViewMedium

                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="@string/issued"

                                    android:textSize="@dimen/normal_font"
                                    android:paddingStart="@dimen/normal_margin"
                                    android:paddingEnd="@dimen/normal_margin"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/dark_gray" />


                                <com.ids.mercury.custom.CustomTextViewMedium

                                    android:id="@+id/tvIssuedDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/normal_font"
                                    android:paddingStart="@dimen/normal_margin"
                                    android:paddingEnd="@dimen/normal_margin"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/dark_gray" />
                            </LinearLayout>
                            <LinearLayout
                                android:background="@drawable/white_border_layout"
                                android:id="@+id/llExpired"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingEnd="@dimen/normal_margin"
                                android:layout_marginTop="@dimen/normal_margin"

                                >

                                <com.ids.mercury.custom.CustomTextViewMedium

                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="@string/expired"

                                    android:textSize="@dimen/normal_font"
                                    android:paddingStart="@dimen/normal_margin"
                                    android:paddingEnd="@dimen/normal_margin"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/dark_gray" />


                                <com.ids.mercury.custom.CustomTextViewMedium

                                    android:id="@+id/tvExpiredDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/normal_font"
                                    android:paddingStart="@dimen/normal_margin"
                                    android:paddingEnd="@dimen/normal_margin"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/dark_gray" />
                            </LinearLayout>
                            <EditText
                                android:background="@drawable/white_border_layout"
                                android:id="@+id/etGuestName"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:gravity="center_vertical"
                                android:hint="@string/guest_name"
                                android:layout_marginTop="@dimen/normal_margin"
                                android:textSize="@dimen/normal_font"
                                android:paddingStart="@dimen/normal_margin"
                                android:paddingEnd="@dimen/normal_margin"
                                android:maxLines="1"
                                android:textColor="@color/white"
                                android:textColorHint="@color/dark_gray" />

                            <EditText
                                android:background="@drawable/white_border_layout"
                                android:id="@+id/etGuestEmail"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:gravity="center_vertical"
                                android:hint="@string/guest_email"
                                android:layout_marginTop="@dimen/normal_margin"
                                android:textSize="@dimen/normal_font"
                                android:paddingStart="@dimen/normal_margin"
                                android:paddingEnd="@dimen/normal_margin"
                                android:maxLines="1"
                                android:textColor="@color/white"
                                android:textColorHint="@color/dark_gray" />




                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_height"
                                android:background="@drawable/thick_white_border"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:id="@+id/linearPhone"
                                android:paddingStart="@dimen/normal_margin"
                                android:paddingEnd="@dimen/normal_margin"
                                android:layout_marginTop="@dimen/normal_margin"
                                >

                                <com.ids.mercury.custom.CustomTextViewMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+961"
                                    android:id="@+id/tvCountryCode"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/normal_font"/>

                                <com.ids.mercury.custom.CustomTextViewMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_marginStart="@dimen/small_margin"
                                    android:layout_marginEnd="@dimen/small_margin"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/normal_font"/>

                                <EditText
                                    android:background="@color/transparent"
                                    android:id="@+id/etPhoneNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edit_text_height"
                                    android:gravity="center_vertical"
                                    android:hint="@string/phone_number"
                                    android:inputType="phone"

                                    android:textSize="@dimen/normal_font"
                                    android:paddingStart="@dimen/normal_margin"
                                    android:paddingEnd="@dimen/normal_margin"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/dark_gray" />

                            </LinearLayout>

                            <com.ids.mercury.custom.CustomTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/medium_margin"
                                android:text="@string/one_day_text"
                                android:textColor="@color/white"
                                android:textSize="@dimen/small_font"/>


                        </LinearLayout>

                        <Button
                            android:id="@+id/btSendGuestPass"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_marginTop="@dimen/normal_margin"
                            android:background="@color/gray_button"
                            android:text="@string/send_guest_pass"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/normal_font" />
                        <Button
                            android:id="@+id/btBuyGuestPass"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_marginTop="@dimen/normal_margin"
                            android:layout_marginBottom="@dimen/margin_start_end"
                            android:background="@color/gray_button"
                            android:text="@string/buy_guest_pass"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/normal_font" />
                    </LinearLayout>






                    <com.ids.mercury.custom.CustomTextViewMedium
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tvNodata"
                        android:text="@string/no_data"
                        android:background="@color/black"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/normal_font"
                        android:textColor="@color/white"/>
                </RelativeLayout>





            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <include layout="@layout/loading_trans"/>
    </RelativeLayout>






</LinearLayout>