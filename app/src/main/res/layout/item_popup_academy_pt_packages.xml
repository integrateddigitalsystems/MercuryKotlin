<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:id="@+id/linearPopup"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:paddingEnd="@dimen/big_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin"
        android:paddingStart="@dimen/big_margin"
        android:layout_marginTop="@dimen/normal_margin">

        <com.ids.mercury.custom.CustomTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/tvName"
            android:layout_marginTop="@dimen/large_margin_left"
            android:textSize="@dimen/large_font"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>


        <com.ids.mercury.custom.CustomTextViewMedium
            android:id="@+id/tvAmountPt"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/normal_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/large_font" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ids.mercury.custom.CustomTextViewMedium
                android:id="@+id/tvIsMultiUserPt"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="@string/is_checked"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="@dimen/large_font" />

            <ImageView
                android:id="@+id/ivShowPt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>





