<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_start_end"
                android:paddingEnd="@dimen/margin_start_end"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="@dimen/profile_user_image"
                    android:layout_height="@dimen/profile_user_image"
                    android:background="@drawable/gray_button"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/icon_profile"
                        android:layout_height="@dimen/icon_profile"
                        android:src="@drawable/icon_user"
                        android:layout_gravity="center"

                        />

                </LinearLayout>


                <com.ids.mercury.custom.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUsername"
                    android:textColor="@color/white"
                    android:textSize="@dimen/big_font"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:text="Ibrahim Haydar"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linearDisplayedData"
                    >
                    <com.ids.mercury.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPhone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_font"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:text="961 73453535"
                        />

                    <com.ids.mercury.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvEmail"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_font"
                        android:layout_gravity="center_horizontal"
                        android:text="aaa@bbb.ccc"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:id="@+id/linearDataEdit"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/small_edit_text_height"
                        android:paddingStart="@dimen/normal_margin"
                        android:paddingEnd="@dimen/normal_margin"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/linearEmail"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/white_border_layout">

                        <ImageView
                            android:layout_width="@dimen/icon_small_2"
                            android:layout_height="@dimen/icon_small_2"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/email"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/etEmail"
                            android:hint="@string/email"
                            android:textColorHint="@color/dark_gray"
                            android:textSize="@dimen/small_font"
                            android:textColor="@color/white"
                            android:background="@color/transparent"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:maxLines="1"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/small_edit_text_height"
                        android:paddingStart="@dimen/normal_margin"
                        android:paddingEnd="@dimen/normal_margin"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/linearCalendar"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/small_margin"
                        android:gravity="center_vertical"
                        android:background="@drawable/white_border_layout">

                        <ImageView
                            android:layout_width="@dimen/icon_small_2"
                            android:layout_height="@dimen/icon_small_2"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_calendar"/>

                        <com.ids.mercury.custom.CustomTextViewMedium
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/tvCalendarDob"
                            android:textSize="@dimen/small_font"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:background="@color/transparent"

                            android:layout_marginStart="@dimen/normal_margin"
                            android:maxLines="1"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/small_edit_text_height"
                        android:paddingStart="@dimen/normal_margin"
                        android:paddingEnd="@dimen/normal_margin"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/linearPhone"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/small_margin"
                        android:gravity="center_vertical"
                        android:background="@drawable/white_border_layout">

                        <ImageView
                            android:layout_width="@dimen/icon_small_2"
                            android:layout_height="@dimen/icon_small_2"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/phone"/>

                        <com.ids.mercury.custom.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+961"
                            android:id="@+id/tvCountryCode"
                            android:textColor="@color/white"
                            android:textSize="@dimen/small_font"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/small_margin"
                            android:gravity="center_vertical"/>

                        <com.ids.mercury.custom.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_marginStart="@dimen/small_margin"
                            android:layout_marginEnd="@dimen/small_margin"
                            android:textColor="@color/white"
                            android:textSize="@dimen/normal_font"/>

                        <EditText
                            android:background="@color/transparent"
                            android:id="@+id/etPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:gravity="center_vertical"
                            android:hint="@string/phone_number"
                            android:inputType="phone"

                            android:textSize="@dimen/small_font"
                            android:paddingEnd="@dimen/small_margin"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textColorHint="@color/dark_gray" />
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@drawable/gray_button"
                    android:layout_marginTop="@dimen/big_margin"
                    android:id="@+id/btEditUpdate"
                    android:text="@string/edit_information"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_font"
                    />



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@drawable/gray_button"
                    android:layout_marginTop="@dimen/big_margin"
                    android:text="@string/loyalty_points"
                    android:textAllCaps="false"
                    android:id="@+id/btLoyalityPoints"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_font"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@drawable/gray_button"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/History"
                    android:textAllCaps="false"
                    android:id="@+id/btHistory"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_font"
                    />
            </LinearLayout>
        </ScrollView>

        <include layout="@layout/loading_trans"/>
    </RelativeLayout>






</LinearLayout>